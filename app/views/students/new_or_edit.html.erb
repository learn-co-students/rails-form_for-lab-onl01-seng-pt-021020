<h1>Student Form</h1>

<%= form_for @student do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %>

  <br><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %>

  <br>

  <% if @student.id.nil? %>
    <%= f.submit "Create Student" %>
  <% else %>
    <%= f.submit "Update Student" %>
  <% end %>
<% end %>
